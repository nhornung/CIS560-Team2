<Window x:Class="FifaDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FifaDatabase.Views"
        xmlns:local="clr-namespace:FifaDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid Margin="0,0,0,-21">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <views:Header Grid.Row="0" x:Name="HeaderView" HorizontalAlignment="Center"/>
        <views:NavBar Grid.Row="1" x:Name="NavBarView" HorizontalAlignment="Center"/>
        <Border x:Name="DisplayBorder" Grid.Row="2"></Border>
        
    </Grid>
</Window>
