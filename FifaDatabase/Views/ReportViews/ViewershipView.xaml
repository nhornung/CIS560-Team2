        <DatePicker Name="endDate" Margin="90.333,270,781.8,77.7"/>
        <TextBlock Panel.ZIndex="12" Margin="90.333,239.537,827.734,135" TextWrapping="Wrap" Text="Before" Foreground="White" FontFamily="Century Gothic" FontSize="20" TextAlignment="Left"/>
